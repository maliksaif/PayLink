<resources>

    <style name="Widget.Theme.PayLink.ButtonBar.Fullscreen" parent="Widget.Material3.Button">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="CustomAutoCompleteTextView" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="font">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.PayLink.Headline1" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.PayLink.Headline2" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.PayLink.Headline3" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_xxx_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.PayLink.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/text_xx_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.PayLink.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextAppearance.PayLink.LabelExtraSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_x_small</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>


    <style name="TextAppearance.PayLink.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>




</resources>